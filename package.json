{
  "name": "project-boilerplate",
  "author": "Kennedy Rose <krose@escaladesports.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --stream --no-sort --concurrency 999",
    "clean": "lerna run clean --stream --no-sort --concurrency 999",
    "dev": "lerna run dev --stream --no-sort --concurrency 999",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "netlify": "open-cli https://app.netlify.com/sites/project-boilerplate/deploys"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^6.1.0",
    "husky": "^3.0.3",
    "lerna": "^3.16.4",
    "open-cli": "^5.0.0"
  },
  "dependencies": {}
}
