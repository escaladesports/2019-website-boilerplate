{
  "name": "escalade",
  "author": "Kennedy Rose <krose@escaladesports.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "npx lerna bootstrap --use-workspaces",
    "build": "npx lerna run build --stream --no-sort --concurrency 999",
    "postbuild": "cp -r ./packages/gatsby-site/public ./public && cp -r ./packages/sanity-cms/dist ./public/admin",
    "clean": "rm -rf public && npx lerna run clean --stream --no-sort --concurrency 999",
    "deploy": "npx lerna run deploy --stream --no-sort --concurrency 999",
    "dev": "lerna run dev --parallel --concurrency 999",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "netlify": "open-cli https://app.netlify.com/sites/escalade/deploys",
    "open": "npx lerna run open --stream --no-sort --concurrency 999",
    "patch": "npx lerna run patch --stream --no-sort --concurrency 999",
    "serve": "npx lerna run serve --stream --no-sort --concurrency 999"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint": "^6.1.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "open-cli": "^5.0.0",
    "yarn": "^1.17.3"
  },
  "dependencies": {}
}
